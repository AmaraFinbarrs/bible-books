<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="row" >
                <% @books.each do |book| %>
                    <div class="col-md-6">
                        <div class="card mt-3 ">
                            <%= link_to book_path(book.id), class: 'book-links' do %>
                                <div class="card-body">
                                    <h3><%= book.title%></h3>
                                </div>
                            <% end %>
                        </div>
                    </div>
                <% end %> 
                <div class="bb_pagination mb-4">
                    <div class="page_info mb-2">
                        <%= page_entries_info @books, {entry_name: 'Book'} %>
                    </div> 
                    <%= will_paginate @books, :container => false %>
                </div>
            </div>
        </div>
        <div class="col-md-4">  
            <div class="card mt-3">
                <div class="card-header">
                    Divisions
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <% @divisions.each do |division| %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <%= link_to division.division, books_path(:div => division.id) %>
                            <span class="badge bg-primary rounded-pill"> <%= division.books.count %> </span>
                        </li>
                        <% end %>
                    </ul>
                </div> 
            </div>    
        </div>
    </div>
</div>
