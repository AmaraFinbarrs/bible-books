<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="row" >
                <% @books.each do |book| %>
                    <div class="col-md-6">
                        <div class="card mt-3 ">
                            <div class="card-body">
                                <h3><%= link_to book.title, book_path(book.id) %></h3>
                                <%= link_to "View", book_path(book.id), class: 'btn btn-primary' %>
                            </div>
                        </div>
                    </div>
                <% end %> 
            </div>
        </div>
        <div class="col-md-4">  
            <div class="card mt-3">
                <div class="card-header">
                    Divisions
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <% @divisions.each do |division| %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <%= link_to division.division, books_path(:div => division.id) %>
                            <span class="badge bg-primary rounded-pill"> <%= division.books.count %> </span>
                        </li>
                        <% end %>
                    </ul>
                </div> 
            </div>    
        </div>
    </div>
</div>
