<div class="flex-row d-flex justify-content-center">
    <div class="col-md-8">
        <div class="card mt-5 ">
            <div class="card-body">
                <%= form_for @book do |f| %>
                    <div class="form-group mb-4">
                        <%= f.label :title %>
                        <%= f.text_field :title, class: 'form-control' %>
                    </div>
                    <div class="form-group mb-4">
                        <%= f.label :description %>
                        <%= f.text_area :description, class: 'form-control' %>
                    </div>
                    <div class="form-group mb-4">
                        <%= f.label 'Number of Chapters' %>
                        <%= f.number_field :no_of_chapter, class: 'form-control', min: 0 %>
                    </div>
                    <div class="form-group mb-4">
                        <%= f.label :division %> <br>
                        <%= f.select :division_id, Division.all.map {|d| [d.division, d.id]}, class: 'form-select d-block' %>
                    </div>
                    <div class="d-flex justify-content-center gap-3" >
                        <%= f.submit "Create Book", class: 'btn btn-outline-success d-block flex-fill' %>
                        <%= link_to "Back", books_path, class: 'btn btn-outline-primary d-block flex-fill' %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>