<div class="row justify-content-center vh-100">
  <div class="col-md-6">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <h2 class="text-center mb-4">Access Your Member Portal</h2>

      <div class="form-floating mb-4">
        <%= f.email_field :email, class: "form-control", id: "LogInEmail" %>
        <%= f.label :email, class: "form-label", autofocus: true, autocomplete: "email", for: "LogInEmail" do %>
          Email Address
        <% end %>
      </div>

      <div class="form-floating mb-4">
        <%= f.password_field :password, class: "form-control", autocomplete: "current-password", id: "LogInCurrentPassword" %>
        <%= f.label :password, class: "form-label", for: "LogInCurrentPassword" do %>
          Password
        <% end %>
      </div>

      <div class="row mb-4">
        <div class="col d-flex justify-content-center">
            <% if devise_mapping.rememberable? %>
              <div class="form-check">
                <%= f.check_box :remember_me, class: "form-check-input", id: "LogInCheckBox" %>
                <%= f.label :remember_me, class: "form-check-label", for: "LogInCheckBox" do %>
                  Remember me
                <% end %>
              </div>
            <% end %>
        </div>

        <div class="col">
          <%= link_to "Forgot password?", new_password_path(resource_name), class: "btn btn-link" %>
        </div>
      </div>

      <div class="">
        <%= f.submit "Log in", class: "btn btn-primary btn-block mb-4 w-100" %>
      </div>

      <div class="text-center">
        <p>Not a member? <%= link_to "Become a Member", new_registration_path(resource_name), class: "btn btn-link" %></p>

      <div class="d-flex justify-content-center">
       <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
