<div class="row justify-content-center vh-100">
  <div class="col-md-6">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <h2 class="text-center mb-4">Become a Member</h2>

      <div class="form-floating mb-4">
        <%= f.email_field :email, class: "form-control", id: "SignInEmail" %>
        <%= f.label :email, class: "form-label", autofocus: true, autocomplete: "email", for: "SignInEmail" do %>
          Email Address
        <% end %>
      </div>

      <div class="form-floating mb-4">
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password", id: "SignInNewPassword" %>
        <%= f.label :password, class: "form-label", for: "SignInNewPassword" do %>
          Password
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        <% end %>
      </div>

      <div class="form-floating mb-4">
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", id: "SignInNewPassword" %>
        <%= f.label :password_confirmation, class: "form-label", for: "SignInNewPassword" do %>
          Password Confirmation
        <% end %>
      </div>

      <div class="">
        <%= f.submit "Sign Up", class: "btn btn-primary btn-block mb-4 w-100" %>
      </div>

      <div class="text-center">
        <div class="d-flex-column justify-content-center">
        <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
