<div class="container">
    <div class="row">
        <div class="col-md-8">

        <p id="notice"><%= notice %></p>

        <h1>Verses</h1>

        <%= link_to 'Create New Verse', new_verse_path, class: 'btn btn-outline-primary' %>

        <div class="row" >
          <% @verses.each do |verse| %>
                <div class="card mt-3 ">
                    <div class="card-body">
                        <h3><%= "#{verse.book.title} #{verse.chapter_id}:#{verse.id}" %></h3>
                        <%= verse.content %>
                        <br>
                        <%= link_to 'Show', verse, class: 'btn btn-outline-primary' %>
                        <%= link_to 'Edit', edit_verse_path(verse), class: 'btn btn-outline-primary'  %>
                        <%= link_to 'Destroy', verse, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-primary'  %>
                    </div>
                </div>
          <% end %> 
        </div>

<br>