<p id="notice"><%= notice %></p>

<h1>Verses</h1>

<table>
  <thead>
    <tr>
      <th>Verse no</th>
      <th>Content</th>
      <th>Chapter</th>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @verses.each do |verse| %>
      <tr>
        <td><%= verse.verse_no %></td>
        <td><%= verse.content %></td>
        <td><%= verse.chapter_id %></td>
        <td><%= verse.book_id %></td>
        <td><%= link_to 'Show', verse %></td>
        <td><%= link_to 'Edit', edit_verse_path(verse) %></td>
        <td><%= link_to 'Destroy', verse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

